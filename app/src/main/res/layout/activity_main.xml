<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@raw/dark_wallpaper" android:fitsSystemWindows="false">

    <Button
            android:text="@string/go_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDark"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/restore_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLight"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/buttonDark"/>
    <Button
            android:text="@string/set_by_current_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNow"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/buttonLight"/>
    <Button
            android:text="@string/set_up_timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSetAlarm"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/buttonNow"/>
</android.support.constraint.ConstraintLayout>
